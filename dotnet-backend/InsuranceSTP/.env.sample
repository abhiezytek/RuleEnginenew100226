# ===========================================
# Backend Environment Configuration - Sample
# ===========================================
# Copy this file to .env and update values for your environment

# -------------------------------------------
# DATABASE CONFIGURATION
# -------------------------------------------

# SQLite (Default - Local Development)
DATABASE_URL=Data Source=insurance_stp.db

# SQL Server (Uncomment for SQL Server)
# DATABASE_URL=Server=localhost;Database=InsuranceSTP;User Id=sa;Password=YourPassword;TrustServerCertificate=True;

# MySQL (Uncomment for MySQL)
# DATABASE_URL=Server=localhost;Port=3306;Database=insurance_stp;User=root;Password=YourPassword;

# PostgreSQL (Uncomment for PostgreSQL)
# DATABASE_URL=Host=localhost;Port=5432;Database=insurance_stp;Username=postgres;Password=YourPassword;

# -------------------------------------------
# CORS CONFIGURATION
# -------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# -------------------------------------------
# LOGGING
# -------------------------------------------
# Log level: Trace, Debug, Information, Warning, Error, Critical
LOG_LEVEL=Information

# -------------------------------------------
# SERVER CONFIGURATION
# -------------------------------------------
# Port for the API server
API_PORT=8001

# Environment: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development
